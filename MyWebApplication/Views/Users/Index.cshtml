@model IEnumerable<MyWebApplication.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Список пользователей</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Добавить пользователя
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Имя</th>
                            <th>Email</th>
                            <th>Дата рождения</th>
                            <th class="text-end pe-4">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-people display-4 d-block mb-3 opacity-50"></i>
                                    <p class="mb-0">Пользователей пока нет</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-medium">
                                        <i class="bi bi-person me-2 text-primary"></i>
                                        @Html.DisplayFor(m => item.Name)
                                    </td>
                                    <td>
                                        <a href="mailto:@item.Email" class="text-decoration-none">
                                            @Html.DisplayFor(m => item.Email)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm">Изменить</a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm text-white">Инфо</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-danger btn-sm">Удалить</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>