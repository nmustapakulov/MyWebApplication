@model MyWebApplication.Models.User

@{
    ViewData["Title"] = "Подробная информация о пользователе";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Подробная информация</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        @Html.DisplayFor(m => m.Name)
                    </h5>
                </div>

                <div class="card-body p-4 p-md-5">
                    <dl class="row mb-5">
                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Имя
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5 fw-semibold">
                            @Html.DisplayFor(m => m.Name)
                        </dd>

                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Email
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                @Html.DisplayFor(m => m.Email)
                            </a>
                        </dd>

                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Дата рождения
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5">
                            <i class="bi bi-calendar-event me-2 text-primary"></i>
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </dd>
                    </dl>

                    <hr class="my-4">

                    <div class="d-flex flex-column flex-md-row gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-5">
                            <i class="bi bi-pencil-square me-2"></i>Редактировать
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 mt-3 mt-md-0">
                            <i class="bi bi-list-ul me-2"></i>Вернуться к списку
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>