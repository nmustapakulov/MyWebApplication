@model MyWebApplication.Models.Phone

@{
    ViewData["Title"] = "Редактирование телефонного номера";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Редактирование номера</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-telephone-fill me-2"></i>
                        @Html.DisplayFor(m => m.PhoneNumber)
                    </h5>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-medium">
                                Номер телефона <span class="text-danger">*</span>
                            </label>
                            <input asp-for="PhoneNumber" 
                                   class="form-control form-control-lg"
                                   placeholder="+996 700 123 456" 
                                   autocomplete="tel" />
                            <div class="form-text">Пример: +996700123456 или 0700123456</div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserId" class="form-label fw-medium">
                                Владелец <span class="text-danger">*</span>
                            </label>
                            <select asp-for="UserId" 
                                    class="form-select form-select-lg" 
                                    asp-items="ViewBag.UserId">
                                <option value="">— Выберите пользователя —</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid d-md-flex gap-3">
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i>Сохранить изменения
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 mt-3 mt-md-0">
                                <i class="bi bi-x-circle me-2"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}