@model IEnumerable<MyWebApplication.Models.Phone>

@{
    ViewData["Title"] = "Список телефонных номеров";
}

<div class="container-fluid container-md mt-4">
    <!-- Шапка: адаптивное выравнивание (центр на мобильных, по краям на десктопе) -->
    <div class="row align-items-center mb-4">
        <div class="col-12 col-md-6 text-center text-md-start mb-3 mb-md-0">
            <h1 class="h3 mb-0 text-gray-800 fw-bold">Телефонные номера</h1>
        </div>
        <div class="col-12 col-md-6 text-center text-md-end">
            <!-- Кнопка на мобильных занимает всю ширину (w-100) -->
            <a asp-action="Create" class="btn btn-success w-100 w-md-auto shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Добавить номер
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3">Номер телефона</th>
                            <th class="d-none d-sm-table-cell">Владелец</th>
                            <th class="text-end pe-4">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="bi bi-telephone display-4 d-block mb-3 opacity-25"></i>
                                    <p>Телефонных номеров пока нет</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <!-- Иконка трубки, скрытая на мобильных для экономии места -->
                                            <i class="bi bi-telephone me-2 text-primary d-none d-md-block"></i>
                                            <div>
                                                <div class="fw-bold text-dark text-nowrap">@item.PhoneNumber</div>
                                                <!-- На мобильных показываем имя владельца прямо под номером (d-sm-none) -->
                                                <div class="d-block d-sm-none small text-muted">
                                                    <i class="bi bi-person me-1"></i>@item.User.Name
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <!-- Колонка владельца скрывается на мобильных, так как мы вывели имя выше -->
                                    <td class="d-none d-sm-table-cell">
                                        <div class="fw-medium text-dark">@item.User.Name</div>
                                        <div class="small text-muted">@item.User.Email</div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <!-- Адаптивная группа кнопок: текст скрывается на мобильных, остаются только иконки -->
                                        <div class="btn-group shadow-sm">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Изменить">
                                                <i class="bi bi-pencil text-dark"></i>
                                                <span class="d-none d-lg-inline ms-1 text-dark">Изменить</span>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Инфо">
                                                <i class="bi bi-info-circle"></i>
                                                <span class="d-none d-lg-inline ms-1">Инфо</span>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Удалить">
                                                <i class="bi bi-trash"></i>
                                                <span class="d-none d-lg-inline ms-1">Удалить</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
