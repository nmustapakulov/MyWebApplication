@model MyWebApplication.Models.Phone

@{
    ViewData["Title"] = "Удаление телефонного номера";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Удаление номера телефона</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Вы уверены, что хотите удалить этот номер?
                    </h5>
                </div>

                <div class="card-body p-4 p-md-5">
                    <!-- Большая предупреждающая иконка -->
                    <div class="text-center mb-4">
                        <i class="bi bi-telephone-x display-1 text-danger opacity-75"></i>
                    </div>

                    <!-- Данные номера -->
                    <dl class="row mb-5">
                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Номер телефона
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5 fw-semibold">
                            <i class="bi bi-telephone me-2 text-primary"></i>
                            @Html.DisplayFor(m => m.PhoneNumber)
                        </dd>

                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Владелец
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5">
                            <i class="bi bi-person-circle me-2 text-primary"></i>
                            @Html.DisplayFor(m => m.User.Name)
                        </dd>

                        <dt class="col-sm-3 col-lg-2 fw-medium text-muted">
                            Email владельца
                        </dt>
                        <dd class="col-sm-9 col-lg-10 fs-5">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            <a href="mailto:@Model.User.Email" class="text-decoration-none">
                                @Html.DisplayFor(m => m.User.Email)
                            </a>
                        </dd>
                    </dl>

                    <!-- Форма подтверждения удаления -->
                    <form asp-action="Delete" method="post" class="text-center">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash3 me-2"></i>Да, удалить навсегда
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 mt-3 mt-md-0">
                                <i class="bi bi-x-circle me-2"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>